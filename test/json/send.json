{
    "swagger": "2.0",
    "info": {
        "description": "SendCloud 测试平台",
        "version": "1.0.0",
        "title": "SendCloud testApi"
    },
    "host": "http://new-web-test.apps.sohuno.com",
    "basePath": "",
    "tags": [{
        "name": "mail",
        "description": "mail"
    }, {
        "name": "sms",
        "description": "sms"
    }],
    "schemes": [
        "http"
    ],
    "paths": {
        "/testapi/mail.send.json": {
            "post": {
                "tags": [
                    "mail"
                ],
                "summary": "测试普通发送",
                "description": "测试普通发送",
                "operationId": "mail",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                },
                "parameters": [{
                    "name": "api_user",
                    "in": "query",
                    "description": "api_user",
                    "type": "string",
                    "default": "test_sendcloud_api_user"
                }, {
                    "name": "api_key",
                    "in": "query",
                    "description": "api_key",
                    "type": "string",
                    "default": "testsendcloudapikey"
                }, {
                    "name": "from",
                    "in": "query",
                    "description": "from",
                    "type": "string",
                    "defalut": "service@sendcloud.im"
                }, {
                    "name": "to",
                    "in": "query",
                    "description": "to email",
                    "required": true,
                    "type": "string"
                }, {
                    "name": "subject",
                    "in": "query",
                    "description": "主题",
                    "type": "string",
                    "defalut": "来自sendcloud的测试邮件"
                }, {
                    "name": "fromname",
                    "in": "query",
                    "description": "from name",
                    "type": "string",
                    "defalut": "testsendcloud"
                }, {
                    "name": "html",
                    "in": "query",
                    "description": "邮件内容",
                    "type": "string",
                    "defalut": "欢迎使用sendcloud"
                }, {
                    "name": "bcc",
                    "in": "query",
                    "description": "bcc",
                    "required": true,
                    "type": "string"
                }, {
                    "name": "cc",
                    "in": "query",
                    "description": "cc",
                    "required": true,
                    "type": "string"
                }, {
                    "name": "reply_to",
                    "in": "query",
                    "description": "reply_to",
                    "type": "string"
                }, {
                    "name": "resp_email_id",
                    "in": "query",
                    "description": "api_user",
                    "required": false,
                    "type": "string",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "user_maillist",
                    "in": "query",
                    "description": "api_user",
                    "required": false,
                    "type": "string",
                    "default": "true",
                    "enum": [
                        "true",
                        "false"
                    ]
                }, {
                    "name": "x_smtpapi",
                    "in": "query",
                    "description": "api_user",
                    "required": true,
                    "type": "string"
                }]
            }
        },
        "/testsmsapi/send": {
            "post": {
                "tags": ["sms"],
                "summary": "测试短信发送",
                "description": "发送单条短信",
                "operationId": "mail",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                },
                "parameters": [{
                    "name": "smsUser",
                    "required": true,
                    "description": "子账号",
                    "type": "string"
                }, {
                    "name": "templateId",
                    "required": true,
                    "description": "模板ID",
                    "type": "int"
                }, {
                    "name": "phone",
                    "required": true,
                    "description": "电话号码",
                    "type": "string"
                }, {
                    "name": "vars",
                    "required": false,
                    "description": "替换变量的json串",
                    "type": "string"
                }, {
                    "name": "timestamp",
                    "required": false,
                    "description": "UNIX时间戳",
                    "type": "string"
                }]
            }
        },
        "/testsmsapi/sendn": {
            "post": {
                "tags": ["sms"],
                "summary": "测试多条短信发送",
                "description": "发送多条短信发送",
                "operationId": "mail",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    }
                },
                "parameters": [{
                    "name": "smsUser",
                    "required": true,
                    "description": "子账号",
                    "type": "string"
                }, {
                    "name": "templateId",
                    "required": true,
                    "description": "模板ID",
                    "type": "int"
                }, {
                    "name": "tos",
                    "required": true,
                    "description": "手机号和替换变量对应的json串",
                    "type": "string"
                }, {
                    "name": "timestamp",
                    "required": false,
                    "description": "UNIX时间戳",
                    "type": "string"
                }]
            }
        }
    }
}
